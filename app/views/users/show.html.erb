
<%= @user.name %>, <%= @user.email %>

<div class="row">
  <aside class="col-md-5">
      <p>
        <% unless @user.avatar.blank? %>
        	<%= image_tag @user.avatar.variant(resize_to_limit: [300, 300]) %>
  			<% end %>
      </p> 
  </aside>
</div>
<br>

<% if current_user?(@user) %>
 <%= link_to "Change your profile", edit_user_path, :class => "btn btn-outline-dark" %>
 <%= link_to "Delete", @user, method: :delete,
                                  data: { confirm: "You sure?" }, :class => "btn btn-outline-dark"  %>
<% end %>